{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@open-dream/shared": ["../shared/index.ts"],
      "@open-dream/shared/*": ["../shared/*"],
      "@handlers/*": ["handlers/*"],
      "@functions/*": ["functions/*"],
      "@services/*": ["services/*"],
      "@sql/*": ["sql/*"],
      "@connection/*": ["connection/*"],
      "@lib/*": ["lib/*"],
      "@module_structure/*": ["module_structure/*"],
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "allowJs": false,
    "noEmit": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../shared" }]
}
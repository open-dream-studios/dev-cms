{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@open-dream/shared": ["../shared/index.ts"],
      "@open-dream/shared/*": ["../shared/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "allowJs": false,
    "noEmit": false
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules"],
  "references": [{ "path": "../shared" }]
}
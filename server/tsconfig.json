{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    // "paths": {
    //   "@shared/*": ["../shared/*"]
    // },
    "paths": {
      // "@shared/*": ["../shared/dist/shared/*"]
      "@shared/*": ["./dist/shared/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "noEmit": false,
    "checkJs": false,
    "emitDeclarationOnly": false,
    "declaration": false
  },
  "include": ["**/*"],
  // "exclude": ["dist", "node_modules"],
  "exclude": ["dist", "node_modules", "../shared"],
  "references": [{ "path": "../shared" }]
}